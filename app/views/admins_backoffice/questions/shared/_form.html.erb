<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"><%= action_message %></h1>
  </div>
  <!-- /.col-lg-12 -->
</div>

<% if @question.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>

    <ul>
      <% @question.errors.full_messages.each do |question| %>
        <li> <%= message %> </li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="col-lg-6">
  <%= form_with(model: [ :admins_backoffice, @question ], local:true)  do |form| %>
    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description, class:"form-control", placeholder:"Descrição pergunta", rows: 5 %>
    </div>

    <div class="form-group">
      <%= form.label :subject_id %>
      <%= form.collection_select(:subject_id, Subject.all, :id, :description, {}, { class: "form-control"}) %>

    </div>

    <button type="submit" class="btn btn-default">Salvar</button>
  <% end %>
</div>