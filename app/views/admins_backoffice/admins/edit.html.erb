
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Editar Administrador</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>

<% if @admin.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert">×</button>

      <ul>
        <% @admin.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
  </div>
<% end %>


<div class="col-lg-6">
    <%= form_with(model: [ :admins_backoffice, @admin ], local: true) do |form| %>
    <div class="form-group">
       <%= form.label :email %>
       <%= form.text_field :email, class:"form-control", placeholder:"Email do administrador" %>
    </div>

    <div class="form-group">
      <%= form.label :password %>
      <%= form.text_field :password, class:"form-control", placeholder: "Senha"%>
    </div>

    <div class="form-group">
      <%= form.label :password_confirmation %>
      <%= form.text_field :password_confirmation, class:"form-control", placeholder: "Confirmação da Senha"%>
    </div>

    <button type="submit" class="btn btn-default">Salvar</button>
  <% end %>
</div>